@model DashboardVm
@{
    ViewData["Title"] = "Home";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-6 col-xl-3">
            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-calendar-check fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Today Booking</p>
                    <h6 class="mb-0">@Model.TodayBooking</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-thumbs-up fa-3x text-success"></i>
                <div class="ms-3">
                    <p class="mb-2">Total Approval</p>
                    <h6 class="mb-0">@Model.TotalApproval</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-times-circle fa-3x text-danger"></i>
                <div class="ms-3">
                    <p class="mb-2">Today Rejected</p>
                    <h6 class="mb-0">@Model.TodayRejected</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-book-open fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Total Booking</p>
                    <h6 class="mb-0">@Model.TotalBooking</h6>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Sale & Revenue End -->

<div class="container-fluid pt-4 px-4">
    <div class="bg-light text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Recent Registration</h6>
            <a href="/vehicle/list?type=truck">Show All</a>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-dark">
                        <th scope="col"><input class="form-check-input" type="checkbox" disabled></th>
                        <th scope="col">Date</th>
                        <th scope="col">Type</th>
                        <th scope="col">Owner</th>
                        <th scope="col">Driver</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Status</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Recent?.Any() == true)
                    {
                        foreach (var r in Model.Recent)
                        {
                            <tr>
                                <td><input class="form-check-input" type="checkbox" /></td>
                                <td>@r.SubmittedDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@r.VehicleType</td>
                                <td>@r.VehicleOwnerName</td>
                                <td>@r.DriverName</td>
                                <td>@r.OwnerPhone</td>
                                <td>
                                    @{
                                        var badge = r.Status == "Approved" ? "success"
                                        : r.Status == "Rejected" ? "danger"
                                        : "warning text-dark";
                                    }
                                    <span class="badge bg-@badge">@r.Status</span>
                                </td>
                                <td class="text-nowrap">
                                    @* View details (use token if available) *@
                                    <a class="btn btn-sm btn-primary me-1" href="@(string.IsNullOrWhiteSpace(r.UniqueToken) ? Url.Action("Details","Vehicle", new { id = r.Id }) : Url.Action("DetailsByToken","Vehicle", new { token = r.UniqueToken }))" title="View">
                                        <i class="fa fa-eye"></i>
                                    </a>

                                    @* Optional: at least one file link if exists 
                                    @if (!string.IsNullOrEmpty(r.IdCardBothSidesPath))
                                    {
                                        <a class="btn btn-sm btn-outline-primary" href="@r.IdCardBothSidesPath" target="_blank">
                                            <i class="fa fa-download"></i> ID
                                        </a>
                                    }*@
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="8" class="text-center text-muted">No registrations yet.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

