@{
    Layout = null;
    var lang = (Context.Request?.Query["lang"].ToString() == "ar") ? "ar" : "en";
    ViewData["Title"] = lang == "ar" ? "تسجيل الدخول" : "User Login";
    string T(string en, string ar) => lang == "ar" ? ar : en;
    var toggleTo = lang == "ar" ? "en" : "ar";
    var toggleLabel = lang == "ar" ? "English" : "العربية";
    var toggleUrl = "/user/login?lang=" + toggleTo;
    var isRTL = lang == "ar";
}

<!doctype html>
<html lang="@lang" dir="@(isRTL ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        :root {
            --maroon: #7C1D3A;
            --maroon-dark: #5f142b;
            --border: #eed7de;
            --white: #ffffff;
        }

        body {
            font-family: system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
            background-color: var(--white);
            color: #222;
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            width: 100%;
            max-width: 420px;
            background-color: var(--white);
            border: 1px solid var(--border);
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
            position: relative;
        }

        .card-body {
            padding: 2rem;
        }

        h3 {
            color: var(--maroon);
            font-weight: 700;
        }

        .btn-primary {
            background-color: var(--maroon);
            border-color: var(--maroon);
            font-weight: 600;
        }

            .btn-primary:hover {
                background-color: var(--maroon-dark);
                border-color: var(--maroon-dark);
            }

        label {
            color: var(--maroon);
            font-weight: 500;
        }

        .form-control {
            text-align: @(isRTL ? "right" : "left");
            direction: @(isRTL ? "rtl" : "ltr");
        }

            .form-control:focus {
                border-color: var(--maroon);
                box-shadow: 0 0 0 0.2rem rgba(124, 29, 58, 0.25);
            }

        .lang-switch {
            position: absolute;
            top: 10px;
            right: 10px;
        }

        [dir="rtl"] .lang-switch {
            right: auto;
            left: 10px;
        }

        .lang-switch .btn {
            font-size: 0.8rem;
            padding: 4px 10px;
            border-radius: 20px;
            color: var(--maroon);
            border-color: var(--maroon);
        }

            .lang-switch .btn:hover {
                background-color: var(--maroon);
                color: #fff;
            }

        .footer-text {
            color: #777;
            text-align: center;
            font-size: 0.9rem;
            position: absolute;
            bottom: 15px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="card">
        <div class="lang-switch">
            <a href="@toggleUrl" class="btn btn-outline-primary">@toggleLabel</a>
        </div>

        <div class="card-body">
            <h3 class="text-center mb-4">@T("User Login", "تسجيل الدخول")</h3>

            @if (TempData["ok"] != null)
            {
                <div class="alert alert-success">@TempData["ok"]</div>
            }
            @if (TempData["err"] != null)
            {
                <div class="alert alert-danger">@TempData["err"]</div>
            }

            <form method="post" action="/user/login@(lang=="ar"?"?lang=ar":"")">
                @Html.AntiForgeryToken()
                <input type="hidden" name="lang" value="@lang" />

                <div class="mb-3">
                    <label class="form-label" for="qid">@T("QID", "الرقم الشخصي")</label>
                    <input id="qid" name="qid" class="form-control" maxlength="11" pattern="^\d{11}$"
                           inputmode="numeric" required />
                    <div class="form-text" id="qidHelp"></div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="phone">@T("Phone", "الهاتف")</label>
                    <input id="phone" name="phone" class="form-control" type="tel" placeholder="974########"
                           inputmode="numeric" required />
                    <div class="form-text" id="phoneHelp"></div>
                </div>

                <button class="btn btn-primary w-100" type="submit">@T("Send OTP", "إرسال رمز التحقق")</button>
            </form>

            <p class="mt-3 small text-muted text-center">
                @T("In development, you can use OTP 123456.", "لأغراض التطوير، يمكنك استخدام رمز 123456.")
            </p>
        </div>
    </div>

    <div class="footer-text">
        © @DateTime.Now.Year Transport Office
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        (function () {
            function digitsOnly(s) { return (s || '').replace(/\D/g, ''); }
            function normalizeQid(v) { return digitsOnly(v).substring(0, 11); }
            function normalizePhone(v) {
                var d = digitsOnly(v);
                if (d.startsWith('974')) d = d.substring(0, 11);
                else d = ('974' + d).substring(0, 11);
                return d;
            }

            var qid = document.getElementById('qid');
            var qidHelp = document.getElementById('qidHelp');
            qid.addEventListener('input', function () {
                qid.value = normalizeQid(qid.value);
                qidHelp.textContent = (qid.value.length === 11) ? '' : 'QID must be exactly 11 digits';
            });

            var phone = document.getElementById('phone');
            var phoneHelp = document.getElementById('phoneHelp');
            phone.addEventListener('input', function () {
                phone.value = normalizePhone(phone.value);
                phoneHelp.textContent = (phone.value.length === 11) ? '' : 'Phone must be 11 digits (974########).';
            });
        })();
    </script>
</body>
</html>
