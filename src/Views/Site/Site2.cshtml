        :root {
            --brand: #c89a4b;
            --ink: #2a2a2a;
            --bg: #f9f6f1;
        }

        body {
            color: var(--ink);
            background: #f9f9f9;
        }

        .btn-brand, .btn-mta {
            background: var(--brand);
            color: #fff;
            border: none;
        }

            .btn-brand:hover, .btn-mta:hover {
                filter: brightness(0.95);
                color: #fff;
            }

        .soft-card {
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 4px 24px rgba(0,0,0,.06);
            padding: 1.5rem;
        }

        .hero {
            background: var(--bg);
            border-radius: 24px;
        }

        .section-title {
            color: var(--brand);
            font-weight: 700;
        }

        footer {
            border-top: 1px solid #eee;
        }

        /* Language toggle (show only the active language) */
        .lang-en, .lang-ar {
            display: none !important;
        }

        .show-en .lang-en, .show-ar .lang-ar {
            display: revert !important;
        }

            .show-en .lang-en.block, .show-ar .lang-ar.block {
                display: block !important;
            }

        /* Section card + checks */
        .section-card {
            background: #fff;
            border: 1px solid #eee;
            border-radius: 18px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        }

        .check-item {
            display: flex;
            align-items: flex-start;
            gap: 0.5rem;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

            .check-item i {
                color: var(--brand);
                margin-top: 0.25rem;
            }

        .badge-pill {
            background: var(--brand);
            color: #fff;
            padding: 0.4rem 0.8rem;
            border-radius: 50rem;
            font-size: 0.9rem;
        }
    </style>
