@{
    var lang = Context.Request.Query["lang"] == "ar" ? "ar" : "en";
    var newLang = lang == "ar" ? "en" : "ar";
    var currentUrl = Context.Request.Path;
       
    var dir = lang == "ar" ? "rtl" : "ltr";   
    var qs = Context?.Request?.QueryString.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="@lang" dir="@dir">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(ViewData["Title"] ?? "MTO")</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        :root {
            --mta: #7B0D26;
            --mta-ink: #5a0a1d;
            --tint: #F9F2F4;
            --bd: #F0D9E0;
        }

        body {
            font-family: 'Tajawal',system-ui,sans-serif;
            color: #1d1d1f;
        }

        .navbar {
            border-bottom: 1px solid var(--bd);
            background: #fff;
        }

        .brand {
            font-weight: 800;
            color: var(--mta);
            text-decoration: none;
            font-size: 1.25rem;
        }

        .btn-mta {
            background: var(--mta);
            border-color: var(--mta);
            color: #fff;
        }

            .btn-mta:hover {
                background: #6D1933;
                border-color: #6D1933;
                color: #fff;
            }

        .nav-link {
            font-weight: 700;
            color: #222 !important;
            opacity: .85;
        }

            .nav-link.active, .nav-link:hover {
                color: var(--mta) !important;
            }

        .lang-toggle .btn {
            border-radius: 999px;
        }

        .hero {
            border-top: 4px solid var(--mta);
        }

        .section-card {
            border: 1px solid var(--bd);
            border-radius: 18px;
            background: #fff;
        }

        .soft-card {
            border: 1px dashed var(--mta);
            border-radius: 14px;
            padding: 18px;
        }

        .check-item {
            display: flex;
            gap: .6rem;
            align-items: center;
            margin: .4rem 0;
        }

            .check-item i {
                color: var(--mta);
            }

        .badge-pill {
            border: 1px dashed var(--mta);
            color: var(--mta);
            padding: .35rem .8rem;
            border-radius: 999px;
            font-weight: 700;
        }

        footer {
            border-top: 1px solid var(--bd);
            color: #777;
            font-size: .9rem;
        }

        .rounded-xxl {
            border-radius: 28px;
        }
    </style>
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="brand" href="@Url.Action("Index","Site", new { lang = lang })">
                    <img alt="MTA" src="~/img/logo.png" style="height:36px" class="me-2" />
                    
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navmain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="#home" data-i="nav.home">الصفحة الرئيسية</a></li>
                        <li class="nav-item"><a class="nav-link" href="#tankers" data-i="nav.tankers">الصهاريج</a></li>
                        <li class="nav-item"><a class="nav-link" href="#trucks" data-i="nav.trucks">الشاحنات</a></li>
                        <li class="nav-item"><a class="nav-link" href="#steps" data-i="nav.steps">خطوات التقديم</a></li>
                        <li class="nav-item"><a class="nav-link" href="#faq" data-i="nav.faq">الأسئلة</a></li>
                        <li class="nav-item"><a class="nav-link" href="#contact" data-i="nav.contact">الاتصال</a></li>
                    </ul>

                    <a class="btn btn-mta rounded-pill px-4 me-3" href="/main/register" data-i="cta.register">سجّل الآن</a>

                    <div class="lang-toggle">
                        <a class="btn btn-outline-secondary @(lang=="en"?"active":"")"
                           href="@($"{currentUrl}?lang=en")">English</a>
                        <a class="btn btn-outline-secondary @(lang=="ar"?"active":"")"
                           href="@($"{currentUrl}?lang=ar")">العربية</a>
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid px-3">
        @RenderBody()
    </main>

    <footer class="container-fluid py-3">
        <div class="container text-center">
            <div class="small" data-i="footer.disclaimer">
                مكتب مواطن للنقليات غير مسؤولة عن أي اقتباس من الموقع - جميع الحقوق محفوظة © 2025
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
