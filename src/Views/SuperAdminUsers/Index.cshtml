@model IEnumerable<MT.Controllers.SuperUserListVm>
@{
    ViewData["Title"] = "Manage Users";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Users</h2>
        <a class="btn btn-primary" href="/SuperAdminUsers/Create">Create User</a>
    </div>

    @if (TempData["ok"] != null)
    {
        <div class="alert alert-success">@TempData["ok"]</div>
    }

    <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>QID</th>
                    <th>Role</th>
                    <th>Username</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th>Updated</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.Name</td>
                        <td>@u.Email</td>
                        <td>@u.Phone</td>
                        <td>@u.QID</td>
                        <td>@u.RoleName</td>
                        <td>@u.Username</td>
                        <td>
                            @if (u.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>@u.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@(u.UpdatedAt?.ToLocalTime().ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                        <td class="d-flex gap-2">
                            <a class="btn btn-sm btn-outline-primary" href="/SuperAdminUsers/Edit/@u.Id"><i class="fa fa-edit"></i></a>
                            <form method="post" asp-action="Toggle" asp-route-id="@u.Id">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm @(u.IsActive ? "btn-outline-danger" : "btn-outline-success")">
                                    <i class="fa @(u.IsActive ? "fa-ban" : "fa-check")"></i>
                                    @* @(u.IsActive ? "Deactivate" : "Activate") *@
                                </button>
                            </form>
                            @* Reset Password temporarily hidden *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
